<web-fragment
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
              id="poms-thesaurus" version="3.0">

  <name>poms_thesaurus</name>
  <display-name>Beeld en Geluid thesaurus integration</display-name>
  <distributable />
  <servlet>
    <servlet-name>example-callback</servlet-name>
    <jsp-file>/thesaurus/example/callback/index.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>popup.js</servlet-name>
    <jsp-file>/thesaurus/popup.js/index.js.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>example-secure</servlet-name>
    <jsp-file>/thesaurus/example/index.jspx</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>example-callback</servlet-name>
    <url-pattern>/thesaurus/example/callback</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>example-secure</servlet-name>
    <url-pattern>/thesaurus/example/secure</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>popup.js</servlet-name>
    <url-pattern>/thesaurus/popup.js</url-pattern>
  </servlet-mapping>
</web-fragment>
